<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new" class="btn btn-success">Add New Campground</a>
    <ul style="list-style-type:none;">
        <% for (let campground of campgrounds){ %>
            <li>
                <div class="container my-2">
                <div class="card">
                    <div class="row">
                        <div class="col-3">
                            <img src="<%= campground.image %>" class="img-fluid card-img-top" alt="<%= campground.title %>">
                        </div>
                        <div class="col-9 card-body">
                            <h5 class="card-title"><%= campground.title %></h5>
                            <p class="card-text"><%= campground.description %></p>
                            <a href="/campgrounds/<%= campground.id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                  </div>
                </div>
            </li>
        <% }; %>
    </ul>
