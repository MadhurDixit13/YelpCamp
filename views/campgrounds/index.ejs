<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new" class="btn btn-success">Add New Campground</a>
    <ul style="list-style-type:none;">
        <% for (let campground of campgrounds){ %>
            <li>
                <div class="container my-2">
                <div class="card">
                    <div class="row">
                        <div class="col-3">  
                            <% if(campground.images.length){ %>
                                <img src="<%= campground.images[0].url %>" class="img-fluid card-img-top" alt="<%= campground.title %>">
                            <% }else{ %>
                                <img src="https://res.cloudinary.com/dilvwd6d9/image/upload/c_thumb,w_200,g_face/v1722130414/YelpCamp/ljbma6otemkwu8wz2sja.jpg" class="img-fluid card-img-top" alt="<%= campground.title %>">
                            <% } %>
                            <!-- <img src="<%= campground.image %>" class="img-fluid card-img-top" alt="<%= campground.title %>"> -->
                        </div>
                        <div class="col-9 card-body">
                            <h5 class="card-title"><%= campground.title %></h5>
                            <p class="card-text"><%= campground.description %></p>
                            <a href="/campgrounds/<%= campground.id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                  </div>
                </div>
            </li>
        <% }; %>
    </ul>
    <script>
        const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
        const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
      </script>
