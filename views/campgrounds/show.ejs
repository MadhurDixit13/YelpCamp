<% layout('layouts/boilerplate') %>
<link rel="stylesheet" type="text/css" href="/stylesheets/stars.css">

<div class="container my-3">
  <div class="row">
    <div class="col-3">
      <div id="map" style="width:400px; height:300px;">

      </div>
      <div class="card" style="width: 18rem;">
            <div id="campgroundCarousel" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <% campground.images.forEach((img,i) =>{ %>
                <div class="carousel-item <%= i===0 ? 'active' : ' ' %>">
                  <img src="<%= img.url %>" class="d-block w-100" alt="...">
                  <div class="carousel-caption d-none d-md-block">
                    <h5>First slide label</h5>
                    <p>Some representative placeholder content for the first slide.</p>
                  </div>
                </div>
                <% }) %>
              </div>
              <% if(campground.images.length > 1){ %>
                <button class="carousel-control-prev" type="button" data-bs-target="#campgroundCarousel" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#campgroundCarousel" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              <% } %>
            </div>
          
          <div class="card-body">
            <h5 class="card-title"><%= campground.title %></h5>
            <p class="card-text"><%= campground.description %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item text-muted"><%= campground.location %></li>
            <li class="list-group-item">Price: $<%= campground.price %>/night</li>
            <li class="list-group-item text-muted">Submitted by: <%= campground.author.username %></li>
          </ul>
          <% if(currentUser && currentUser._id.equals(campground.author._id)) { %>
          <div class="card-body">
            <!-- <a href="/campgrounds" class="card-link">Go Back</a> -->
            <div class="row ">
                <div class="col-3">
                  <a href="/campgrounds/<%= campground._id %>/edit" class="card-link btn btn-primary my-2">Edit</a>
                </div>
                <div class="col-3">
                  <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger my-2">Delete</button>
                  </form>
                </div>
            </div>
          </div>
          <% } %>
      </div>
    </div>
    <div class="col-6">
      <% for (let review of campground.reviews){ %>
      <div class="card mb-2">
          <div class="card-body">
            <h5 class="card-title"><%= review.author.username %></h5>
            <!-- <p class="card-text">Rating: </p> -->
            <p class="starability-result" data-rating="<%= review.rating %>">
              Rated: <%= review.rating %> stars
            </p>
            <p class="card-text"><%= review.body %></p>
            <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
              <div class="row">
                <div class="col-2">
                  <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger my-2">Delete</button>
                  </form>
                </div>
              </div>
          <% } %>
        </div>
      </div>
      <% }; %>
    </div>
    
  </div>
  <% if(currentUser){ %>
  <div class="row">
    <div class="col-3">
      <h2 class="my-2">Leave a review</h2>
    <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" novalidate class="validated-form mb-3" >
      <div class="mb-3">
        <label for="body" class="form-label">Review</label>
        <textarea class="form-control" id="body" name="review[body]" required></textarea>
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Review Body cannot be blank.
        </div>
      </div>
      <div class="mb-3">   
        <!-- <label ></label> -->
        <fieldset class="starability-basic">
          <legend for="rating" class="form-label">Rating:</legend>
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Rating cannot be blank.
        </div>
      </div>
      <button type="submit" class="btn btn-success">Add Review</button>
    </form>
  </div>
  </div>
  <% } %>
</div>
<script>
  const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
  const campground = <%- JSON.stringify(campground) %>;
</script>
<script src="/js/showPageMap.js"></script>